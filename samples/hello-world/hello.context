context: hello-world

# Declare entities at context level
entities:
      - name: STDIO
        type: stdio

# The context level can contain one flow at most
flow:
     -  name: say hello
        source: 1.flow

# This is a list of connections between entities, values and the possibly contained flow
connections:
      - name: message
        dataType: String
        from: flow/say hello/message
        to: entity/STDIO/stdout